---
import type { Page } from "astro"

interface Props {
  page: Page<any>
}

const { page } = Astro.props

const hasPreviousPage = page.url.prev
const hasNextPage = page.url.next
const currentPage = page.currentPage
---

<nav
  aria-label="Blog pagination"
  class="mt-8 flex items-center justify-center space-x-4"
>
  {
    hasPreviousPage ? (
      <a
        href={`/blog/${currentPage - 1}`}
        class="border-border bg-background flex h-10 items-center justify-center rounded-full border px-6 py-2 transition-all duration-300 ease-in-out hover:bg-offset hover:shadow-lg"
      >
        Previous
      </a>
    ) : (
      <span
        class="flex h-10 cursor-not-allowed items-center justify-center rounded-full border bg-offset px-6 py-2 text-offset transition-all duration-300 ease-in-out"
        aria-disabled="true"
      >
        Previous
      </span>
    )
  }

  <span class="flex h-10 items-center justify-center rounded-full px-6 py-2">
    {currentPage}
  </span>

  {
    hasNextPage ? (
      <a
        href={`/blog/${currentPage + 1}`}
        class="border-border bg-background flex h-10 items-center justify-center rounded-full border px-6 py-2 transition-all duration-300 ease-in-out hover:bg-offset hover:shadow-lg"
      >
        Next
      </a>
    ) : (
      <span
        class="flex h-10 cursor-not-allowed items-center justify-center rounded-full border bg-offset px-6 py-2 text-offset transition-all duration-300 ease-in-out"
        aria-disabled="true"
      >
        Next
      </span>
    )
  }
</nav>
