---
const { blog } = Astro.props
---

<a href={`/blog/${blog.slug}`} class="block">
  <div
    class="bg-background group flex flex-col items-start rounded-lg border border-default p-5 shadow-md transition-shadow hover:shadow-lg md:flex-row"
  >
    <div class="flex-1 pr-3">
      <h2
        class="pt-1 text-2xl font-semibold transition-colors group-hover:text-primary"
      >
        {blog.data.title}
      </h2>
      <time datetime={blog.datetime} class="mt-3 block text-sm text-offset">
        {
          new Date(blog.data.datetime).toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </time>
      <p class="mt-4 line-clamp-2 text-offset">{blog.data.description}</p>
    </div>
  </div>
</a>
