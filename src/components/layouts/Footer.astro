---
import { Icon } from "astro-icon/components"
import { menuItems, socialLinks } from "../../config/config.json"

const currentYear = new Date().getFullYear()
---

<section class="mt-4 py-10">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div
      class="text-center xl:flex xl:items-center xl:justify-between xl:text-left"
    >
      <div class="xl:flex xl:items-center xl:justify-start">
        <p class="mt-5 text-sm xl:ml-6 xl:mt-0">
          Â© {currentYear} Rui Sereno. All Rights Reserved.
        </p>
      </div>

      <div
        class="mt-8 items-center xl:mt-0 xl:flex xl:justify-end xl:space-x-8"
      >
        <ul
          class="flex flex-wrap items-center justify-center gap-x-8 gap-y-3 xl:justify-end"
        >
          {
            menuItems.map((menu) => (
              <li>
                <a
                  href={menu.link}
                  title={menu.name}
                  class="text-sm transition-all duration-300 hover:text-offset focus:text-offset"
                >
                  {menu.name}
                </a>
              </li>
            ))
          }
        </ul>

        <div class="mb-5 mt-8 h-px w-full bg-border xl:m-0 xl:h-6 xl:w-px">
        </div>

        <ul class="flex items-center justify-center space-x-8 xl:justify-end">
          {
            socialLinks.map((social) => (
              <li>
                <a
                  href={social.link}
                  title={social.iconName}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block transition-all duration-300 hover:text-offset focus:text-offset"
                >
                  <Icon name={social.iconName} />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
